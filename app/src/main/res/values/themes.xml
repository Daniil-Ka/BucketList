<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.BucketList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>

        <!-- цвета для drawable -->
        <item name="gradient_start">#A181F2</item>
        <item name="gradient_end">#5886F2</item>
        <item name="input_field">#FFFFFF</item>
        <item name="default_color">#FFFFFF</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BucketList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BucketList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BucketList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>